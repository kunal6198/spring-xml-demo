<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean name="movie1,movie2" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg ref="actor1"></constructor-arg>
<!--        <constructor-arg name="Actor" ref="actor"/>-->
    </bean>

    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Amitabh"/>
        <constructor-arg name="age" value="70"/>
        <constructor-arg name="gender" value="male"/>
    </bean>
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Salmaan"/>
        <constructor-arg name="age" value="55"/>
        <constructor-arg name="gender" value="male"/>
    </bean>
    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Aamir"/>
        <constructor-arg name="age" value="54"/>
        <constructor-arg name="gender" value="male"/>
    </bean>
   <!-- <bean id="movie1" class="com.stackroute.domain.Movie">

        <constructor-arg name="Actor" ref="actor"/>


    </bean>-->

</beans>